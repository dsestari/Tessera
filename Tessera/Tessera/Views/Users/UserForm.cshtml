@model Tessera.ViewModels.UserFormViewModel

@{
    ViewBag.Title = "UserForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New User</h2>

@using (Html.BeginForm("Save","Users"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")
    <div class="form-group">
        @Html.LabelFor(m => m.User.Name)
        @Html.TextBoxFor(m => m.User.Name, new { @class = "form-control"})
        @Html.ValidationMessageFor(m => m.User.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.User.Email)
        @Html.TextBoxFor(m => m.User.Email, new { @class = "form-control"})
        @Html.ValidationMessageFor(m => m.User.Email)
    </div>    
    <div class="form-group">
        @Html.LabelFor(m => m.User.GroupId)
        @Html.DropDownListFor(m => m.User.GroupId, new SelectList(Model.Groups, "Id", "Name"), "Select Group", new { @class="form-control"})
        @Html.ValidationMessageFor(m => m.User.GroupId)
    </div>
     <div class="form-group">
        @Html.LabelFor(m => m.User.UserStatusId)
        @Html.DropDownListFor(m => m.User.UserStatusId, new SelectList(Model.UserStatus, "Id", "Name", 1), new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.User.UserStatusId)
    </div>
    @Html.HiddenFor(m => m.User.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
    
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}

